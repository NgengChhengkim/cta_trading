<div class="row">
  <div class="head-title">
    <%= @product.name %>
    <%= link_to edit_admin_product_path(@product), class: "pull-right" do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
      <%= t "admin.actions.edit" %>
    <% end %>
  </div>
  <hr>
  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt><%= t "admin.products.tables.code" %>:</dt>
      <dd><%= @product.code %></dd>
      <dt><%= t "admin.products.tables.name" %>:</dt>
      <dd><%= @product.name %></dd>
      <dt><%= t "admin.products.tables.category" %>:</dt>
      <dd><%= @product.category_name %></dd>
      <dt><%= t "admin.products.tables.brand" %>:</dt>
      <dd><%= @product.brand_name %></dd>
    </dl>
  </div>
  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt><%= t "admin.products.tables.retail_sale_price" %>:</dt>
      <dd><%= number_to_currency @product.retail_sale_price %></dd>
      <dt><%= t "admin.products.tables.discount" %>:</dt>
      <dd><%= percentage_format @product.discount %></dd>
      <dt><%= t "admin.products.tables.discount_price" %>:</dt>
      <dd><%= number_to_currency @product.discount_price %></dd>
      <dt><%= t "admin.products.tables.post_date" %>:</dt>
      <dd><%= l @product.created_at, format: :default %></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= t "admin.products.tables.cover_image" %>:</dt>
      <dd><%= image_product_table @product.cover_image_url %></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= t "admin.products.tables.description" %>:</dt>
      <dd><%= @product.safe_description %></dd>
    </dl>
  </div>
</div>

<div class="row">
  <div class="head-title"><%= t "admin.products.more_image" %></div>
  <div class="image-list">
    <table id="images-upload" class="table">
      <tbody>
        <%= render partial: "image_list", collection: @product.images, as: :image %>
      </tbody>
    </table>
  </div>
</div>
