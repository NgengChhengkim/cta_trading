<div class="row">
  <div class="head-title">
    <%= @promotion.title %>
    <%= link_to edit_admin_promotion_path(@promotion), class: "pull-right" do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
      <%= t "admin.actions.edit" %>
    <% end %>
  </div>
  <hr>
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt><%= t "admin.promotions.tables.title" %>:</dt>
      <dd><%= @promotion.title %></dd>
      <dt><%= t "admin.promotions.tables.content" %>:</dt>
      <dd><%= @promotion.safe_content %></dd>
      <dt><%= t "admin.promotions.tables.post_date" %>:</dt>
      <dd><%= l @promotion.created_at, format: :default %></dd>
      <dt><%= t "admin.promotions.tables.picture" %>:</dt>
      <dd><%= promotion_image @promotion.picture_url %></dd>
    </dl>
  </div>
</div>
