<%= form_for :promotions, url: admin_destroy_promotions_path do |f| %>
  <%= f.hidden_field :kind, value: @kind %>
  <div class="head-title">
    <span><%= t "admin.promotions.title" %></span>

    <span class="pull-right">
      <%= link_to t("admin.actions.add"), admin_new_information_path(@kind),
        class: "btn btn-primary" %>
      <%= f.submit t("admin.actions.delete"),
        data: {confirm: t("messages.delete_confirm")},
        class: "btn btn-danger btn-delete", disabled: true %>
    </span>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr class="row-head">
        <th class="td-checkbox select-all">
          <%= check_box_tag :select_all %>
        </th>
        <th><%= t "admin.promotions.tables.title" %></th>
        <th><%= t "admin.promotions.tables.post_date" %></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody class="list">
      <%= render partial: "promotion", collection: @promotions, locals: {ff: f} %>
    </tbody>

    <tfoot class="table-footer">
      <tr>
        <td colspan="5"><%= will_paginate @promotions %></td>
      </tr>
    </tfoot>
  </table>
<% end %>
