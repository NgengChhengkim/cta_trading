<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title"><%= t "categories.category" %></h4>
</div>
<div class="modal-body col-md-12">
  <div class="errors"></div>
  <div class="form">
    <%= form_for [:admin, @category], remote: true do |f| %>
      <div>
        <%= f.text_field :name, placeholder: t("categories.placeholders.name"),
          data: Settings.validations.blank, class: "form-control" %>
      </div><br />

      <div class="action pull-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "categories.cancel" %>
        </button>
        <%= f.submit t("categories.save"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
