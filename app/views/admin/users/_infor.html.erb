<div class="filter-loading"><i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i></div>

<%= form_for :users, url: admin_destroy_users_path, remote: true do |f| %>
  <div class="head-title">
    <span><%= t "admin.users.title" %></span>

    <span class="pull-right">
      <%= link_to t("admin.actions.add"), new_admin_user_path, remote: true,
        class: "btn btn-primary", data: {toggle: "modal", target: "#form-modal"} %>
      <%= f.submit t("admin.actions.delete"), data: {confirm: t("messages.delete_confirm")},
        class: "btn btn-danger btn-delete", disabled: true %>
    </span>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr class="row-head">
        <th class="td-checkbox select-all">
          <%= check_box_tag :select_all %>
        </th>
        <th><%= t "admin.users.tables.name" %></th>
        <th><%= t "admin.users.tables.email" %></th>
        <th><%= t "admin.users.tables.role" %></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody class="list">
      <%= render partial: "user", collection: @users, locals: {ff: f} %>
    </tbody>

    <tfoot class="table-footer">
      <tr>
        <td colspan="6"><%= will_paginate @users %></td>
      </tr>
    </tfoot>
  </table>
<% end %>
