<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">
    <%= @user.new_record? ? t("admin.users.add_user") : t("admin.users.edit_user") %>
  </h4>
</div>
<div class="modal-body col-md-12">
  <div class="errors"></div>
  <div class="form">
    <%= form_for [:admin, @user], remote: true do |f| %>
      <div>
        <%= f.text_field :name, placeholder: t("admin.users.placeholders.name"),
          data: Settings.validations.name, class: "form-control" %>
      </div><br />

      <div>
        <%= f.text_field :email, placeholder: t("admin.users.placeholders.email"),
          data: Settings.validations.email, class: "form-control" %>
      </div><br />

      <div>
        <%= f.text_field :phone_number, placeholder: t("admin.users.placeholders.phone_number"),
          data: Settings.validations.phone_number, class: "form-control" %>
      </div><br />

      <% if @user.new_record? %>
        <div><%= f.password_field :password,
          data: Settings.validations.password, autocomplete: "off",
          placeholder: t("admin.users.placeholders.password"), class: "form-control"%>
        </div><br />

        <div><%= f.password_field :password_confirmation,
          data: Settings.validations.confirm_password,
          autocomplete: "off", placeholder: t("admin.users.placeholders.password_confirmation"),
          class: "form-control" %>
        </div><br />
      <% end %>

      <div>
        <%= f.select :role, User.roles.keys, {}, {class: "form-control"} %>
      </div><br />

      <div class="action pull-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "admin.actions.cancel" %>
        </button>
        <%= f.submit t("admin.actions.save"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
