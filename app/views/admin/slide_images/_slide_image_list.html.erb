<%= form_for :slide_image, url: admin_destroy_slide_images_path do |f| %>
  <div class="head-title">
    <span><%= t "admin.slide_images.title" %></span>

    <span class="pull-right">
      <%= link_to t("admin.actions.add"), new_admin_slide_image_path,
        class: "btn btn-primary" %>
      <%= f.submit t("admin.actions.delete"),
        data: {confirm: t("messages.delete_confirm")},
        class: "btn btn-danger btn-delete", disabled: true %>
    </span>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr class="row-head">
        <th class="td-checkbox select-all">
          <%= check_box_tag :select_all %>
        </th>
        <th><%= t "admin.slide_images.tables.picture" %></th>
        <th><%= t "admin.slide_images.tables.post_date" %></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody class="list">
      <%= render partial: "slide_image", collection: @slide_images, locals: {ff: f} %>
    </tbody>

    <tfoot class="table-footer">
      <tr>
        <td colspan="5"><%= will_paginate @slide_images %></td>
      </tr>
    </tfoot>
  </table>
<% end %>
