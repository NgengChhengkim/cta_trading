<%= render "shared/banner" %>

<div class="container">
  <div class="head-title">Hot Products</div>
  <div class="row">
    <% if user_signed_in? %>
      <%= render partial: "shared/user_product", collection: @products, as: :product %>
    <% else %>
      <%= render partial: "shared/guest_product", collection: @products, as: :product %>
    <% end %>
  </div>
</div>
