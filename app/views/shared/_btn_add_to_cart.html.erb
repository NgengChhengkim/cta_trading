<% if user_signed_in? %>
  <%= form_for ProductCart.new, remote: true do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <%= button_tag type: "submit", class: "btn btn-default btn-add-to-cart",
      data: {toggle: "modal", target: "#modal-cart"} do %>
      <i class="fa fa-shopping-cart" aria-hidden="true"></i> &nbsp;
      <%= t "actions.add_to_cart" %>
    <% end %>
  <% end %>
<% else %>
  <%= button_tag class: "btn btn-default add-to-cart",
    data: {"product-id": product.id, toggle: "modal", target: "#modal-cart"} do %>
    <i class="fa fa-shopping-cart" aria-hidden="true"></i> &nbsp;
    <%= t "actions.add_to_cart" %>
  <% end %>
<% end %>
