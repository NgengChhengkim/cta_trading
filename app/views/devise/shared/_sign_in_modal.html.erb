<div class="col-md-6 col-md-offset-3 devise-form">
  <div class="head">
    <h2><%= t "devise.labels.sign_in" %></h2>
    <p class="method"><%= t "devise.labels.choose_method" %></p>
    <button class="btn btn-facebook">
      <i class="fa fa-fw fa-facebook"></i>
      <span><%= t "devise.labels.facebook" %></span>
    </button>

    <button class="btn btn-google">
      <i class="fa fa-fw fa-google"></i>
      <span><%= t "devise.labels.google" %></span>
    </button>

    <div class="hr">
      <hr>
      <span><%= t "devise.labels.or" %></span>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div><%= f.email_field :email, placeholder: t("devise.placeholders.email"),
      data: Settings.validations.email, class: "form-control" %>
    </div><br />

    <div><%= f.password_field :password, placeholder: t("devise.placeholders.password"),
      autocomplete: "off", data: Settings.validations.password,
      class: "form-control" %>
    </div><br />

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br /><br />
    <% end %>

    <%= f.submit t("devise.labels.login"), class: "btn btn-warning full-width" %>
    <br /><br />

    <%= link_to t("devise.labels.forget_pass"), new_password_path(resource_name) %>
  <% end %>
</div>
