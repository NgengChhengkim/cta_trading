<div class="row">
  <div class="col-md-6 col-md-offset-3 devise-form">
    <div class="head">
      <h2><%= t "devise.labels.forget_pass" %></h2>
    </div>
    <hr>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
      html: { method: :post }) do |f| %>

      <%= render "shared/error_messages", object: resource %>

      <div><%= f.email_field :email, placeholder: t("devise.placeholders.email"),
        autofocus: true, class: "form-control", data: Settings.validations.email %>
      </div><br />

      <%= f.submit "Send", class: "btn btn-warning full-width" %>
    <% end %>
  </div>
</div>
