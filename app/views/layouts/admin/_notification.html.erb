<a href="#" class="dropdown-toggle" data-toggle="dropdown">
  <i class="fa fa-bell-o"></i>
  <span class="label label-danger"><%= Invoice.unseen_invoices.size %></span>
</a>
<ul class="dropdown-menu">
  <li class="header">
    <%= t "admin.invoices.you_have" %>
    <%= pluralize Invoice.unseen_invoices.size, t("admin.invoices.new_invoice") %>
  </li>
  <li>
    <ul class="menu">
      <% Invoice.unseen_invoices.limit(Settings.paginate.per_page_10).each do |invoice| %>
        <li>
          <%= link_to admin_invoice_path(invoice), title: invoice.name do %>
            <i class="fa fa-shopping-basket" aria-hidden="true"></i> &nbsp;
            <%= invoice.name %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
  <li class="footer"><%= link_to t("admin.actions.view_all"), admin_invoices_path %></li>
</ul>
