<div class="media">
  <div class="media-left">
    <%= link_to image_tag(promotion.picture_url, width: Settings.image.size150),
      promotion, class: "media-object", "data-no-turbolink": true %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to promotion.title, promotion,
      "data-no-turbolink": true %></h4>
    <div class="date">
      <i class="fa fa-clock-o" aria-hidden="true"></i>
      <%= l promotion.created_at, format: :default %>
    </div>
  </div>
</div>
<hr>
